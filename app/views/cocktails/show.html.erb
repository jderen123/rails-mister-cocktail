<div class="container text-center" style="color:white;" id="main">

<img src="https://www.freelogodesign.org/file/app/client/thumb/33878734-1ac9-450f-b067-dc8d7d244d5d_200x200.png?1613701561034" id="logo1">
<h1 class="display-4"><%= @cocktail.name %></h1>

<h2> List of Ingredients </h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to dose_path do %>
      <i class="fa fa-trash"></i>
      <% end  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail.id), class: 'btn btn-secondary btn-sm' %>
</div>
