
<div class="container text-center" style="color:white;" id="main">

<img src="https://www.freelogodesign.org/file/app/client/thumb/33878734-1ac9-450f-b067-dc8d7d244d5d_200x200.png?1613701561034" id="logo1">
<h1 class="display-4" style="font-family: 'Dancing Script', cursive;"><%= @cocktail.name %></h1>

<h2 style="margin-top: 40px"> Ingredients </h2>

<table class="table table-warning table-striped" style="width: 500px; margin-left: 300px">
  <tbody>
<% i = 1 %>

  <% @cocktail.doses.each do |dose| %>
      <tr>
      <th scope="row"><%= i %></th>
      <td><%= dose.description %> of <%= dose.ingredient.name %></td>
      <td><%= link_to dose_path(dose), method: :delete do %>
      <i class="fa fa-trash" style="color: #D9534D;"></i>
      <% end  %>
      </td>
    </tr>
    <% i += 1 %>
  <% end %>
</tbody>
</table>


<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail.id), class: 'btn btn-secondary btn-sm' %>
</div>
